<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/rel_settings">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:id="@+id/btn_gallery"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/server_address"
        android:layout_below="@+id/btn_gallery"
        android:layout_alignLeft="@+id/btn_gallery"
        android:layout_alignStart="@+id/btn_gallery"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="localhost" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/server_port"
        android:layout_below="@+id/server_address"
        android:layout_alignLeft="@+id/server_address"
        android:layout_alignStart="@+id/server_address"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/server_address"
        android:layout_alignEnd="@+id/server_address"
        android:text="2000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/textView"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port"
        android:id="@+id/textView2"

        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</LinearLayout>

